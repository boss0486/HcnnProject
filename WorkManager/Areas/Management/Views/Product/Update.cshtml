@using WebCore.Entities;
@using WebCore.Services;
@using WebCore.ENM;
@using WebCore.Model.Enum;
@using WebCore.Model.Services

@using Helper.Language;
@using Helper.TimeData;
@{
    ViewBag.Title = Helper.Page.MetaSEO.MetaTitle;
}

@model WebCore.Entities.Product
@{
    string id = string.Empty;
    string textId = string.Empty;
    string title = string.Empty;
    string summary = string.Empty;
    string categoryId = string.Empty;
    string warrantyId = string.Empty;
    string originateId = string.Empty;
    string madeIn = string.Empty;
    string alias = string.Empty;
    string htmlNote = string.Empty;
    string htmlText = string.Empty;
    string tag = string.Empty;
    string imageFile = string.Empty;
    string imgPath = string.Empty;
    int viewTotal = 0;
    string viewDate = string.Empty;
    double price = 0;
    double listedPrice = 0;
    string enable = string.Empty;
    string clsEnable = string.Empty;
    string imgFile = string.Empty;
    int state = 0;
    string enabled = "";
    string createdBy = "";
    string menuId = "";
    //
    List<ViewAttachment> attachments = null;

    if (Model != null)
    {
        id = Model.ID;
        textId = Model.TextID;
        title = Model.Title;
        summary = Model.Summary;
        categoryId = Model.CategoryID;
        warrantyId = Model.WarrantyID;
        madeIn = Model.MadeInID;
        alias = Model.Alias;
        textId = Model.TextID;
        htmlNote = Model.HtmlNote;
        htmlText = Model.HtmlText;
        tag = Model.Tag;
        imageFile = Model.ImageFile;
        viewTotal = Model.ViewTotal;
        price = Model.Price;
        listedPrice = Model.PriceListed;
        if (Model.ViewDate != null)
        {
            viewDate = Helper.TimeData.TimeFormat.FormatToViewDate(Convert.ToDateTime(Model.ViewDate), Helper.Language.LanguagePage.GetLanguageCode);
        }

        imgPath = Helper.File.AttachmentFile.GetFile(Model.ImageFile, true);
        imgFile = Model.ImageFile;
        createdBy = Model.CreatedBy;
        menuId = Model.MenuID;
        if (Model.Enabled == (int)ModelEnum.State.ENABLED)
        {
            enabled = "checked";
        }
        state = Model.State;
        //
        attachments = AttachmentIngredientService.GetFileByForID((int)ModelEnum.FileType.MULTI, id);
    }
}

<div class="row">
    <div class="col-md-9">
        <div class="row"> 
            <div class="col-md-6">
                <div class="form-group">
                    <label class="form-label">Mã sản phẩm:</label>
                    <input id="txtTextID" name="txtTextID" maxlength="10" type="text" class="form-control" value="@textId" />
                    <span id="lblTextID" class="message msg-box"></span>
                </div>
                <div class="form-group">
                    <label class="form-label">Tên sản phẩm:</label>
                    <input id="txtTitle" name="txtTitle" maxlength="80" type="text" class="form-control" value="@title" />
                    <span id="lblTitle" class="message msg-box"></span>
                </div>
                <div class="form-group">
                    <label class="form-label">@Helper.Language.Resource.Label.Summary</label>
                    <textarea id="txtSummary" name="txtSummary" class="form-control default">@summary</textarea>
                    <span id="lblSummary" class="message msg-box"></span>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="form-label">Giá bán:</label>
                            <input id="txtPrice" name="txtPrice" maxlength="9" type="text" class="form-control" data-Currency="true" value="@Helper.Page.Library.FormatCurrency(price)" />
                            <span id="lblPrice" class="message msg-box"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="form-label">Giá khuyến mại:</label>
                            <input id="txtPriceListed" name="txtPriceListed" maxlength="9" type="text" class="form-control" data-Currency="true" value="@Helper.Page.Library.FormatCurrency(listedPrice)" />
                            <span id="lblPriceListed" class="message msg-box"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="form-label">TG.bảo hành</label>
                            <select id="ddlWarranty" name="ddlWarranty" class="form-control show-tick" data-live-search="true">
                                <option value="">-@Helper.Language.Resource.Label.Option-</option>
                                @Html.Raw(ProductWarrantyService.DDLProductWarranty(warrantyId))
                            </select>
                            <span id="lblWarranty" class="message msg-box"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="form-label">Nhà cung cấp:</label>
                            <select id="ddlProvider" name="ddlProvider" class="form-control show-tick" data-live-search="true">
                                <option value="">-@Helper.Language.Resource.Label.Option-</option>
                                @Html.Raw(ProductProviderService.DDLProductProvider(madeIn))
                            </select>
                            <span id="lblProvider" class="message msg-box"></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label class="form-label">@Helper.Language.Resource.Label.HtmlNote:</label>
                    <textarea class="HtmlEditor" id="txtNote" name="txtNote" style="width:100%; min-height:300px;">@htmlNote</textarea>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label class="form-label">@Helper.Language.Resource.Label.HtmlText:</label>
            <textarea class="HtmlEditors" id="txtHtmlText" name="txtHtmlText" style="width:100%">@htmlText</textarea>
        </div>
        <div class="form-group">
            <label class="form-label">@Helper.Language.Resource.Label.Photo:</label>
            <div class="file-preview">
                <div class="file-preview-footer">
                    @{
                        string lblCount = "... chọn tệp tin";
                        if (attachments != null)
                        {
                            lblCount = $"... {attachments.Count()} tệp tin";
                        }
                    }
                    <i id="btnOpenManagerFile" class="far fa-folder cursor"></i><span id="lblFileTotal" class="photo-caption-text">@lblCount</span>
                </div>
                <div class="container-fuild modal-container-layout" style="height: 205px; overflow:auto">
                    <div class="pre-view">
                        @{
                            if (attachments != null)
                            {
                                foreach (var item in attachments)
                                {
                                    string idFile = $"ibox{item.ID}";
                                    string name = $"{Helper.Page.Library.SubText(5, item.Title)}{item.Extension}";
                                    <div class="col-lg-2 col-md-2 col-sm-2 col-xs-3 pre-item-box" data-id='@item.ID'>
                                        <div class="item-image" data-actived="false">
                                            <div class="image-box">
                                                <img class="thumbnail img-responsive" src="@item.ImagePath" data-id="@item.ID">
                                                <i class="fas fa-times icon-delete" data-id="#@idFile"></i>
                                            </div>
                                            <div class="note-box">
                                                @name<br>
                                            </div>
                                        </div>
                                    </div>
                                }
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <label class="form-label">@Helper.Language.Resource.Label.Photo:</label>
        <div class="form-group ">
            <div class="text-center new-box-preview" style="background:#CCC; padding:30px 0px; height:280px">
                <img src="@imgPath" class="img-responsive" data-id="@imageFile" />
            </div>
        </div>
        <div class="form-group">
            <label class="form-label">@Helper.Language.Resource.Label.Category:</label>
            <select id="ddlCategoryID" name="ddlCategoryID" class="form-control show-tick" data-live-search="true">
                <option value="">-@Helper.Language.Resource.Label.Option-</option>
            </select>
            <span id="lblCategory" class="message msg-box"></span>
        </div>
        <div class="form-group">
            <label class="form-label">Tổng view:</label>
            <input id="txtViewTotal" name="txtViewTotal" maxlength="255" type="text" class="form-control" value="@viewTotal" />
            <span id="lblViewTotal" class="message msg-box"></span>
        </div>

        <div class="form-group">
            <label class="form-label">Ngày đăng:</label>
            <input id="txtViewDate" name="txtViewDate" data-date="true" maxlength="10" type="text" class="form-control" value="@viewDate" />
            <span id="lblViewDate" class="message msg-box"></span>
        </div>
        <div class="form-group">
            <label class="form-label">Tình trạng:</label>
            <select id="ddlState" name="ddlState" class="form-control show-tick" data-live-search="true">
                <option value="-1">-@Helper.Language.Resource.Label.Option-</option>
                @Html.Raw(ProductService.DDLProductState(state))
            </select>
            <span id="lblState" class="message msg-box"></span>
        </div>
        <div class="form-group">
            <label class="form-label">Danh mục</label>
            <div class="vetical-menu" style="height: 477px;">
                <ul id="MenuControler" class="sidebar-menu">
                    @Html.Raw(MenuService.GetMenuForCategory(menuId, "Product"))
                </ul>
            </div>
            <span id="lblMenuID" class="message msg-box"></span>
        </div>
        <div class="form-group panel-active">
            <label class="form-label">&nbsp;</label>
            <input id="cbxActive" name="cbxActive" type="checkbox" class="filled-in" @enabled />
            <label for="cbxActive">Kích hoạt</label>
            <span id="lblActive" class="message msg-box"></span>
        </div>
    </div>
</div>
<!-- button acction -->
<div class="form-group text-right">
    <button id="btnReset" class="btn btn-danger" type="reset">@Helper.Language.Resource.Label.BtnReset</button>
    <button id="btnUpdate" class="btn btn-primary" type="button">@Helper.Language.Resource.Label.BtnUpdate</button>
</div>
<hr />
@{
    if (PermissionService.CheckActionInMenuItem(Helper.Page.MetaSEO.ControllerText, WebCore.Entities.RoleActionKey.DataList))
    {
        <div class="form-group text-right att-data-list">
            <a href="@Helper.Page.Navigate.PathDataList()">
                @Helper.Language.Resource.Label.DataList <i class="fas fa-arrow-circle-right"></i>
            </a>
        </div>
    }
}
<input id="txtID" type="hidden" value="@id" />
@section scripts{
    <script src="~/Areas/Management/_script/product.js"></script>
    <script type="text/javascript">
        $().fileManage({});
        //
        $(document).on("click", ".new-box-preview", function () {
            $(this).fileFinder({
                fileType: fmEnum.fileType.Alone,
                selected: [$('.new-box-preview').find('img').data('id')],
                content: $('.new-box-preview'),
            });
        });
        $(document).on("click", "#btnOpenManagerFile", function () {
            var selected = [];
            $(".file-preview .pre-item-box").each((index, item) => {
                selected.push($(item).data("id"));
            });
            //
            $(this).fileFinder({
                fileType: fmEnum.fileType.Multi,
                selected: selected,
                content: $('.file-preview .pre-view')
            });
        });
        //
        $(document).on('change', '#MenuControler input[type="checkbox"]', function () {
            $('#MenuControler input[type="checkbox"]').not(this).prop('checked', false);
        });
    </script>
}

