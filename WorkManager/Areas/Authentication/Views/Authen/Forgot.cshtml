@{
    ViewBag.Title = Helper.Page.MetaSEO.MetaTitle;
}
<div class="main">
    <div class="login-form" data-keyenter="#btnLogin">
        <h2>Nhận mã xác thực</h2>
        <div class="form-group">
            <input id="txtEmail" name="txtEmail" type="text" class="form-control" placeholder="Email..." />
            <span id="lblEmail" class="message msg-box"></span>
        </div>
        <div class="form-group">
            <button id="btnForgotPassword" class="btn bg-pink waves-effect" type="button">Nhận OTP</button>
        </div>
        <div class="form-group">
            <div class="checkbox checkbox-primary">
                <a href="/Authentication"><i class="fa fa-lock"></i> Đăng nhập</a>
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script src="~/Areas/Authentication/Scripts/login.js"></script>
}